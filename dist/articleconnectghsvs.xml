	</downloadUrl>

	<versionCompare>
	https://github.com/GHSVS-de/plg_system_articleconnectghsvs/compare/2019.08.08...2021.12.18
	</versionCompare>

	<scriptfile>installerScript.php</scriptfile>
	<minimumPhp>7.4.0</minimumPhp>
	<maximumPhp>8.99999.99999</maximumPhp>
	<minimumJoomla>3.10.4</minimumJoomla>
	<maximumJoomla>4.9999.9999</maximumJoomla>
	<allowDowngrades>1</allowDowngrades>

	<files>
		<filename plugin="articleconnectghsvs">articleconnectghsvs.php</filename>
		<filename>LICENSE.txt</filename>
		<folder>language</folder>
		<folder>src</folder>
	</files>

	<config>
	<fields name="params"
		addfieldpath="plugins/system/articleconnectghsvs/src/Field">

		<fieldset name="basic">

			<field type="hidden" default="1" name="articleconnectghsvsplugin"/>

			<field name="tableexists"
				type="PlgSystemArticleConnectGhsvs.tableexist"
				label="Tabelle schon angelegt?" table="#__articleconnectghsvs" />

			<field name="tableCreateSpacer" type="note"
				class="alert alert-info"
				label="PLG_SYSTEM_ARTICLECONNECTGHSVS_TABLECREATE"
				description="PLG_SYSTEM_ARTICLECONNECTGHSVS_TABLECREATE_DESC"/>

			<field name="tableCreate" type="list" default="1" filter="integer"
				label="PLG_SYSTEM_ARTICLECONNECTGHSVS_TABLECREATE">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

		</fieldset>
	</fields>
