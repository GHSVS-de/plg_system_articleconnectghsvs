	<version>2021.12.18</version>
	<description>PLG_SYSTEM_ARTICLECONNECTGHSVS_XML_DESCRIPTION</description>

	<updateservers><server type="extension" priority="1" name="PLG_SYSTEM_ARTICLECONNECTGHSVS">https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/plg_system_articleconnectghsvs-update.xml</server></updateservers>

